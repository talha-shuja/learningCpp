{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build with g++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/output"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build with clang++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/*.cpp",
                "-o",
                "${workspaceFolder}/output"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
